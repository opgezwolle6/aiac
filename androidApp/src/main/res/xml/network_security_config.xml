<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Trust system certificates by default -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Specific configuration for Yandex Cloud API -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">llm.api.cloud.yandex.net</domain>
        <domain includeSubdomains="true">api.cloud.yandex.net</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>

